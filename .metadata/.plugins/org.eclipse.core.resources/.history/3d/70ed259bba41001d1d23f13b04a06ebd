package com.Cucumber_Runner;

import org.junit.AfterClass;
import org.junit.BeforeClass;
import org.junit.runner.RunWith;
import org.openqa.selenium.WebDriver;
import io.cucumber.junit.Cucumber;
import io.cucumber.junit.CucumberOptions;
import Utility_Files.Base_Class;


@RunWith(Cucumber.class)
@CucumberOptions(features = "C:\\Users\\Jayasri\\eclipse-workspace\\Cucumber_Projects\\Feature",
				glue = "com.Cucumber_Runner")

public class Adactin_Runner {
	public static WebDriver driver;
	
	@BeforeClass
	public static void set_Up() {
		driver = Base_Class.Browser("Chrome");
	}
	@AfterClass
	public static void tear_Down() {
		driver.close();
	}

}
